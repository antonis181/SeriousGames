<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Suitcase_FrameLayoutEz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuitcaseEz"
    android:background="@drawable/scissors"
    android:layout_gravity="center"
    android:padding="24dp">

    <GridLayout
        android:id="@+id/Suitcase_gridLayoutEz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center"
        android:padding="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Suitcase_Ez_imageView1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp"
            android:textSize="40sp"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_margin="4dp"
            android:text="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Suitcase_Ez_imageView2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp"
            android:textSize="40sp"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_margin="4dp"
            android:text="2"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Suitcase_Ez_imageView3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp"
            android:textSize="40sp"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_margin="4dp"
            android:text="3"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Suitcase_Ez_imageView4"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp"
            android:textSize="40sp"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_margin="4dp"
            android:text="4"/>





    </GridLayout>


</FrameLayout>